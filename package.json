{
  "name": "connexto-minc-hub",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de gestÃ£o dos times da MINC TEAMS - Minha Igreja na Cidade",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @minc-hub/web dev",
    "dev:api": "pnpm --filter @minc-hub/api dev",
    "dev:mobile-webview": "pnpm --filter @minc-hub/mobile-webview start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "test": "turbo run test",
    "test:api": "pnpm --filter @minc-teams/api test",
    "typecheck": "turbo run type-check",
    "typecheck:web": "pnpm --filter @minc-hub/web type-check",
    "typecheck:api": "pnpm --filter @minc-teams/api type-check",
    "clean": "turbo run clean",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.4"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.48",
      "@types/react-dom": "^18.2.18"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
