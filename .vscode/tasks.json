{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm: dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "@minc-hub/web", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "(ready in|Local:).*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "pnpm: build",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "@minc-hub/web", "build"],
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "pnpm: lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "@minc-hub/web", "lint"],
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
